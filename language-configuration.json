{
    // symbols used for single or and multi-line comments.
    "comments": {
        "lineComment": "--",
        "blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    // Impala, especially, will sometimes need ` quotes around columns that begin with numbers
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["`", "`"],
        ["'", "'"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["(", ")"],
        ["`", "`"],
        ["\"", "\""],
        ["'", "'"]
    ]
}